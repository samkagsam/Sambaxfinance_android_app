<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".activities.LongTermSavingGroupsGeneralActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ToolBar widget -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F9D58"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title=" Sambax Finance "
                app:titleTextColor="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Term Saving Groups:"
                android:textColor="@color/colorFormBackground"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(You get 15% interest per annum on Your Group Savings)"
                android:textColor="@color/colorFormBackground"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/btn_go_to_create_LTG"

                android:layout_marginTop="30dp"
                android:text="Create Long Term Group"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/colorPrimaryBackground"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/btn_my_long_term_groups"

                android:layout_marginTop="20dp"
                android:text="My Long Term Groups"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/colorPrimaryBackground"
                android:layout_gravity="center"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_see_long_term_group_requests"
                    android:text="See Group Requests"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryBackground"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvShowLongTermGroupNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_shape"
                    android:text=""
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>